{
  "compilerOptions": {
    "noImplicitAny": true,
    "noEmitOnError": true,
    "declaration": true,
    "declarationMap": true,
    "removeComments": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "importHelpers": true,
    "lib": ["es2016", "dom"],
    "target": "es5",
    "module": "es6",
    "rootDir": "src",
    "outDir": "build",
    "moduleResolution": "node"
  },
  "include": ["typings/private.d.ts", "src"]
}
